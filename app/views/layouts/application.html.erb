 <!DOCTYPE html>
<html lang="en">
<head>
  <title>Audioscape</title>
    <link rel="stylesheet" type="text/css" href="http://fonts.googleapis.com/css?family=Tangerine">
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />




  <script src="//cdn.jsdelivr.net/rsvp/3.0.6/rsvp.min.js"></script>
  <!-- Firebase -->
  <script src="https://cdn.firebase.com/js/client/2.0.2/firebase.js"></script>

  <!-- GeoFire -->
  <script src="https://cdn.firebase.com/libs/geofire/3.2.1/geofire.min.js"></script>

  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag "vendor/modernizr" %>
  <%= javascript_include_tag 'application'%>


  <%= csrf_meta_tags %>
</head>
<body>
  <% if current_user %>
    <div id='user<%=current_user.id%>' style='display:none'></div>
  <%end%>

  <header>
    <%= render 'layouts/navigation' %>
  </header>

  <div class="container">
    <%= yield %>
  </div>

<% if current_user %>
  <footer>
		<audio id="audio" preload="auto" tabindex="0" controls="" type="audio/mpeg"></audio>
    <div id='secret-playlist' style='display:none'></div>
  </footer>
<% end %>




</body>
</html>
