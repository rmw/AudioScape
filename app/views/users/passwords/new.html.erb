<div class="password_show">
  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <div class="password">
    <%= devise_error_messages! %>


    <div class="field">
      <%= f.email_field :email, autofocus: true, placeholder: "Email", :class => "input_field" %>
    </div>
  </div>

    <div class="actions">
      <%= f.submit "Reset password", :class => "submit_button" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
